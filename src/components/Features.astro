---
import Card from './Card.astro'

const featuresData = [
  {title: 'Credentialing', body: ' The medical staff office processes all requests for priviledges. Dr. White works with Megan Leech and her to team on our credentialing process.'},
  {title: 'Quality', body: ' Dr. Chappell is the chief quality officer for the HH Health System. He works with Joycelyn Craighead the Quality Mangement team.'},
  {title: 'Safety', body: ' Our "Journey to Zero" High-Reliability training initiative is an ongoing effort to ensure safety for our patients.'}
];
---

<section class="features">
  <div class="container">
   {featuresData.map(feature => (
      <Card>
        <h3>{feature.title}</h3>
        <p>{feature.body}</p>
      </Card>
    ))}
  </div>
</section>

<style>
  .features .container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;
    padding: 0 20px;
    margin: 30px auto;
  }

  @media (max-width: 500px) {
  .features .container {
    grid-template-columns: 1fr;
  }
}

</style>